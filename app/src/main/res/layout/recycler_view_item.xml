<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:maxLines="1"
        android:ellipsize="middle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="465432189_3216854.jpg"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tvLatitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFileName"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@+id/tvLatitudeLabel"
        app:layout_constraintStart_toEndOf="@id/tvLatitudeLabel"
        tools:text="38.45"
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/tvLongitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@+id/tvLatitude"
        app:layout_constraintStart_toEndOf="@id/tvLatitude"
        android:text="Longitude: "
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@+id/tvLongitudeLabel"
        app:layout_constraintStart_toEndOf="@id/tvLongitudeLabel"
        tools:text="120.32"
        tools:layout_editor_absoluteX="131dp" />

</android.support.constraint.ConstraintLayout>